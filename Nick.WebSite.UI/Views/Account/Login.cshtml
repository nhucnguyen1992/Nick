
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout_Login.cshtml";
}


<div class="container-fluid page-body-wrapper full-page-wrapper">
    <div class="content-wrapper d-flex align-items-center auth px-0">
        <div class="row w-100 mx-0">
            <div class="col-lg-4 mx-auto">
                <div class="auth-form-light text-left py-5 px-4 px-sm-5">
                    @*<div class="brand-logo">
                            <img src="~/Assets/images/logo.svg" alt="logo">
                        </div>*@
                    <div class="mt-3 fw-light">
                        <label>LOGIN</label>
                    </div>
                    @using (Html.BeginForm("LoginUser", "Account", FormMethod.Post, new { role = "form", @class = "pt-3" }))
                    {

                            <div class="form-group">
                                <input type="email" class="form-control form-control-lg" id="exampleInputEmail1" placeholder="Username">
                            </div>
                            <div class="form-group">
                                <input type="password" class="form-control form-control-lg" id="exampleInputPassword1" placeholder="Password">
                            </div>
                            <div class="mt-3">

                                <button type="submit" class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn" id="btnLoginGoogle">&nbsp; SIGN IN</button>
                            </div>
                        }
                </div>
            </div>
        </div>
    </div>
</div>

